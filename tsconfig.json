{
  "compilerOptions": {
    "target": "ES2022",
    "module": "commonjs",
    "lib": [
      "DOM",
      "ES2022"
    ],
    "sourceMap": true,
    "rootDir": "src",
    "outDir": "dist",
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strictPropertyInitialization": false
  },
  "include": [
    "./src/**/*",
    "../jest.config.ts" 
  ]
}
